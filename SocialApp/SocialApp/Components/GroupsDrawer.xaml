<UserControl
    x:Class="SocialApp.Components.GroupsDrawer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SocialApp.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="300">

    <StackPanel Background="#222831" Padding="10">
        <!-- Title -->
        <TextBlock Text="Groups" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>

        <!-- Horizontal Line -->
        <Border BorderBrush="White" BorderThickness="0,0,0,1" Margin="0,0,0,10"/>

        <!-- Groups List -->
        <StackPanel x:Name="GroupsList">
            <!-- Example Group Item -->
            <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="?" Foreground="Gold" FontSize="18" VerticalAlignment="Center"/>
                    <TextBlock Text="Group Name" FontSize="18" Foreground="White" Margin="5,0,0,0"/>
                </StackPanel>
                <TextBlock Text="Group description goes here." FontSize="14" Foreground="#AAAAAA" Margin="23,0,0,0"/>
            </StackPanel>
        </StackPanel>
        <Button x:Name="CreateGroupButton">
            Create Group
        </Button>
    </StackPanel>
</UserControl>