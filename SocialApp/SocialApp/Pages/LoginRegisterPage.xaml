<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SocialApp.Pages.LoginRegisterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SocialApp.Pages"
    xmlns:components="using:SocialApp.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#222831">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top bar row -->
            <RowDefinition Height="*"/>
            <!-- Form row, takes remaining space -->
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Grid 
            Grid.Row="0"
            Background="#393E46"
            Padding="20"
            MinHeight="40">
            <Border 
                x:Name="Logo"
                Width="40" 
                Height="40" 
                CornerRadius="20"
                HorizontalAlignment="Left"
                Background="Red">
                <Image 
                    Source="../Assets/Logo.png" 
                    Stretch="UniformToFill"/>
            </Border>
            <TextBlock 
                x:Name="PageName"
                Text="Login/Register" 
                FontSize="24" 
                Foreground="#EEEEEE" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontFamily="Segoe Script"/>
        </Grid>

        <!-- Form -->
        <StackPanel
            Grid.Row="1"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center" 
            Background="#393E46" 
            Padding="20" 
            CornerRadius="10" 
            Width="Auto">
            <!-- Email TextBox -->
            <TextBox 
                x:Name="EmailTextbox"
                PlaceholderText="Enter your email..." 
                Width="250" 
                Margin="0,0,0,20" 
                Background="#D9D9D9" 
                Foreground="#222831" 
                BorderThickness="0"
                RequestedTheme="Dark"/>

            <!-- Username TextBox -->
            <TextBox 
                x:Name="UsernameTextbox"
                PlaceholderText="Choose a username..." 
                Width="250" 
                Margin="0,0,0,20" 
                Background="#D9D9D9" 
                Foreground="#222831" 
                BorderThickness="0"
                RequestedTheme="Dark"/>

            <!-- Password PasswordBox -->
            <PasswordBox 
                x:Name="PasswordTextbox"
                PlaceholderText="Enter your password..." 
                Width="250" 
                Margin="0,0,0,20" 
                Background="#D9D9D9" 
                Foreground="#222831" 
                BorderThickness="0"
                RequestedTheme="Dark"/>

            <!-- Confirm Password PasswordBox -->
            <PasswordBox 
                x:Name="ConfirmPasswordTextbox"
                PlaceholderText="Confirm your password..." 
                Width="250" 
                Margin="0,0,0,20" 
                Background="#D9D9D9" 
                Foreground="#222831" 
                BorderThickness="0"
                RequestedTheme="Dark"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Uploaded Image-->
                <Border 
                    x:Name="UploadedImage"
                    Width="40" 
                    Height="40" 
                    CornerRadius="20">
                    <Image 
                        Source="../Assets/User.png" 
                        Stretch="UniformToFill"
                        HorizontalAlignment="Center"/>
                </Border>

                <!-- Upload Image Button -->
                <Button 
                    x:Name="UploadImgButton"
                    Content="Upload Image" 
                    Background="#D9D9D9" 
                    Foreground="#222831" 
                    Padding="10,5" 
                    CornerRadius="5"
                    Margin="10,0,5,0"
                    Click="UploadImage"/>

                <!-- Remove Image Button -->
                <Button 
                    x:Name="RemoveImgButton"
                    Content="Remove Image" 
                    Background="#D9D9D9" 
                    Foreground="#222831" 
                    Padding="10,5" 
                    CornerRadius="5"
                    Margin="5,0,0,0"
                    Click="RemoveImage"/>
            </StackPanel>

            <CheckBox 
                x:Name="CheckBox"
                Margin="5,20,0,0">
                <CheckBox.Content>
                    <TextBlock Text="I accept the terms and conditions"/>
                </CheckBox.Content>
            </CheckBox>

            <!-- Error TextBox -->
            <TextBlock
                x:Name="ErrorTextbox"
                Width="250" 
                Margin="0,0,0,20" 
                Foreground="Red"/>

            <!-- Continue Button -->
            <Button 
                x:Name="ContinueButton"
                Content="Continue" 
                HorizontalAlignment="Center" 
                Background="#D9D9D9" 
                Foreground="#222831" 
                Padding="10,5" 
                CornerRadius="5"/>
        </StackPanel>
    </Grid>
</Page>